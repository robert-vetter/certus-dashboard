{
  "$schema": "https://json-schema.org/draft-07/schema",
  "version": "1.0",
  "lastUpdated": "2025-11-15",
  "description": "Design tokens extracted from Figma for Certus Operations Dashboard",

  "colors": {
    "primary": {
      "50": "#FFDAE0",
      "100": "#FFB5C1",
      "200": "#F8AAB5",
      "400": "#EF3450",
      "500": "#EE2B47",
      "600": "#BF001B",
      "description": "Primary brand color - used for buttons, active states, icons"
    },
    "neutral": {
      "50": "#F6F6F6",
      "100": "#D8D8D8",
      "200": "#9D9D9D",
      "300": "#8E8E8E",
      "400": "#747577",
      "500": "#464749",
      "700": "#282A2E",
      "800": "#18191C",
      "description": "Neutral grays for text, borders, backgrounds"
    },
    "success": {
      "500": "#48B648",
      "description": "Success states, positive indicators"
    },
    "warning": {
      "500": "#F1CE43",
      "description": "Warning states, caution indicators"
    },
    "background": {
      "page": "#444444",
      "primary": "#FFFFFF",
      "secondary": "rgba(216, 216, 216, 0.15)",
      "description": "Background colors for different surfaces"
    },
    "border": {
      "default": "#D8D8D8",
      "light": "rgba(255, 255, 255, 0.1)",
      "primary": "#F8AAB5",
      "description": "Border colors"
    },
    "text": {
      "primary": "#18191C",
      "secondary": "#747577",
      "tertiary": "#8E8E8E",
      "inverse": "#F6F6F6",
      "accent": "#EF3450",
      "description": "Text colors for different hierarchy levels"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "'Inter Tight', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "description": "Primary font family"
    },
    "fontSize": {
      "xs": "10px",
      "sm": "12px",
      "base": "14px",
      "md": "15px",
      "lg": "16px",
      "xl": "20px",
      "2xl": "24px",
      "description": "Font size scale"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "description": "Font weight scale"
    },
    "lineHeight": {
      "xs": "12px",
      "sm": "15px",
      "base": "17px",
      "md": "18px",
      "lg": "19px",
      "xl": "24px",
      "2xl": "29px",
      "description": "Line height for each font size"
    }
  },

  "spacing": {
    "0": "0px",
    "1": "4px",
    "2": "8px",
    "3": "10px",
    "4": "12px",
    "5": "16px",
    "6": "20px",
    "7": "24px",
    "8": "28px",
    "10": "40px",
    "description": "Spacing scale for padding, margin, gap"
  },

  "borderRadius": {
    "xs": "2px",
    "sm": "4px",
    "md": "8px",
    "lg": "10px",
    "xl": "12px",
    "full": "56px",
    "description": "Border radius scale"
  },

  "shadows": {
    "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
    "inset": "inset 0px 0px 4.3px #BF001B",
    "description": "Shadow definitions"
  },

  "components": {
    "sidebar": {
      "width": "80px",
      "gap": "40px",
      "padding": "32px 16px",
      "borderRight": "0.5px solid #D8D8D8",
      "description": "Sidebar dimensions and spacing"
    },
    "header": {
      "height": "92px",
      "padding": "20px 28px",
      "gap": "8px",
      "borderBottom": "0.5px solid #D8D8D8",
      "description": "Header dimensions"
    },
    "kpiTile": {
      "width": "242px",
      "height": "140px",
      "padding": "20px",
      "gap": "24px",
      "border": "0.5px solid #D8D8D8",
      "borderRadius": "8px",
      "headerHeight": "60px",
      "contentHeight": "57px",
      "borderBottom": "0.5px solid #D8D8D8",
      "description": "KPI tile dimensions"
    },
    "quickAction": {
      "width": "322px",
      "height": "65.67px",
      "padding": "8px 16px",
      "gap": "16px",
      "iconSize": "34px",
      "iconPadding": "8px",
      "borderRadius": "8px",
      "description": "Quick action card dimensions"
    },
    "iconButton": {
      "sizes": {
        "sm": "14px",
        "md": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px"
      },
      "description": "Icon sizes"
    },
    "badge": {
      "height": "14px",
      "padding": "0px 4px",
      "borderRadius": "32px",
      "description": "Badge/status indicator dimensions"
    },
    "avatar": {
      "size": "35px",
      "borderRadius": "56px",
      "padding": "8px",
      "description": "User avatar dimensions"
    },
    "filterTab": {
      "height": "27px",
      "padding": "6px 24px",
      "gap": "16px",
      "borderRadius": "8px",
      "activeBg": "linear-gradient(0deg, rgba(255, 218, 224, 0.35), rgba(255, 218, 224, 0.35)), #FFFFFF",
      "activeBorder": "0.5px solid #F8AAB5",
      "description": "Filter tab dimensions and active state"
    }
  },

  "layout": {
    "maxWidth": "1480px",
    "contentWidth": "1280px",
    "mainWidth": "1200px",
    "innerWidth": "1144px",
    "sidebarWidth": "80px",
    "quickActionsWidth": "362px",
    "quickActionsMinWidth": "326px",
    "description": "Layout container widths"
  },

  "animations": {
    "duration": {
      "instant": "0ms",
      "veryFast": "80ms",
      "fast": "120ms",
      "normal": "150ms",
      "standard": "200ms",
      "slow": "250ms"
    },
    "easing": {
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "description": "Animation timing from interaction_specs.md"
  }
}
